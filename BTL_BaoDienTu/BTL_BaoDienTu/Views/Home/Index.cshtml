@model List<BTL_BaoDienTu.Models.News>

@{
    ViewData["Title"] = "Danh sách tin tức";
}

<h2>Danh sách tin tức</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tiêu đề</th>
            <th>Danh mục</th>
            <th>Tác giả</th>
            <th>Ngày tạo</th>
            <th>Hình ảnh</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var news in Model)
        {
            <tr>
                <td>@news.Title</td>
                <td>@news.Category?.CategoryName</td>
                <td>@news.Author?.FullName</td>
                <td>@news.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    @if (!string.IsNullOrEmpty(news.ImageUrl))
                    {
                        <img src="@news.ImageUrl" alt="Ảnh tin tức" style="max-width:100px; height:auto;" />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
