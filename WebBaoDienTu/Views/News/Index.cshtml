@model IEnumerable<WebBaoDienTu.Models.News>

@{
    ViewData["Title"] = "Danh sách tin tức";
    Layout = "_Layout";
}
<link rel="stylesheet" href="~/css/news-index.css" />

<h2>Danh sách tin tức</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">+ Đăng tin mới</a>
</p>

<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Tiêu đề</th>
            <th>Trạng thái</th>
            <th>Ngày tạo</th>
            <th>Danh mục</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>
                    @if (item.IsApproved)
                    {
                        <span class="badge bg-success">Đã duyệt</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">Chờ duyệt</span>
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                <td>@Html.DisplayFor(modelItem => item.Category.CategoryName)</td> <!-- Hiển thị tên danh mục -->
                <td class="action-buttons">
                    <a asp-action="Details" asp-route-id="@item.NewsId" class="btn btn-info">
                        <i class="fas fa-info-circle"></i> Chi tiết
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.NewsId" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Sửa
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.NewsId" class="btn btn-danger" 
                    onclick="return confirm('Bạn có chắc chắn muốn xóa?');">
                        <i class="fas fa-trash"></i> Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
